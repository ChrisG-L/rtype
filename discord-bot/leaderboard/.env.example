# Discord Bot Configuration
# Copy this file to .env and fill in the values

# Discord
DISCORD_TOKEN=your_bot_token_here
DISCORD_GUILD_ID=your_guild_id_for_fast_sync
STATS_CHANNEL_ID=channel_id_for_stats

# Channel restriction (comma-separated IDs) - bot only responds in these channels
# Leave empty to allow all channels
ALLOWED_CHANNEL_IDS=1234567890123456789

# MongoDB (same as R-Type server - localhost on VPS)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=rtype

# Auto-announce records (optional)
# Channel where new records (score, wave, kills, bosses) are announced
RECORDS_CHANNEL_ID=channel_id_for_records_announcements
# Polling interval in seconds (default: 30)
RECORDS_POLL_INTERVAL=30

# Optional
LOG_LEVEL=INFO
EMBED_COLOR=0x00FF00
